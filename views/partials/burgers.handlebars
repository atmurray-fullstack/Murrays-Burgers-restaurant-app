<div id='container-burger'>

    <div id='notEaten' class='burgers'>
        <h3>Not Eaten</h3>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>
                <p>{{this.id}} burger: {{this.burger_name}}</p><button id ={{this.id}}>Eat Da Burger!</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>

    </div>
    <div id='Eaten' class='burgers'>
        <h3>Eaten</h3>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                <p>{{this.id}} burger: {{this.burger_name}}</p>
            </li>
            {{/if}}
            {{/each}}
        </ul>

    </div>

</div>